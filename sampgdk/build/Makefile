# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  sampgdk_config = debug

else ifeq ($(config),release)
  sampgdk_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := sampgdk

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

sampgdk:
ifneq (,$(sampgdk_config))
	@echo "==== Building sampgdk ($(sampgdk_config)) ===="
	@${MAKE} --no-print-directory -C . -f sampgdk.make config=$(sampgdk_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f sampgdk.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   sampgdk"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"